{% extends 'HomefinanceBundle:layout:full.html.twig' %}

{% trans_default_domain "homefinance" %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="panel">
                <div class="panel-body">
                    <legend>
                        <h1>{% block form_title %}{% endblock %}</h1>
                    </legend>
                    {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
                    {% block form %}
                        {{ form(form) }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}