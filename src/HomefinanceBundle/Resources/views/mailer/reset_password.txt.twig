{% trans_default_domain "user" %}

{% block subject %}
{{ 'reset_password.email.subject'|trans({'%username%': user.name}) }}{{ parent() }}
{% endblock %}

{% block content_text_body %}
{{ 'reset_password.email.message'|trans({
    '%name%': user.name,
}) }}
